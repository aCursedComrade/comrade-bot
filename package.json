{
    "name": "comrade-bot",
    "main": "./main.js",
    "type": "module",
    "engines": {
        "node": ">= v18.x.x"
    },
    "private": "true",
    "scripts": {
        "start": "node main.js",
        "build": "node register.js",
        "lint": "prettier . --write"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@extractus/feed-extractor": "^7.0.6",
        "axios": "^1.5.1",
        "discord.js": "^14.13.0",
        "mongoose": "^8.0.2",
        "uwuifier": "^4.0.5"
    },
    "devDependencies": {
        "dotenv": "^16.3.1",
        "eslint": "^8.50.0",
        "prettier": "^3.0.3"
    },
    "overrides": {
        "@vladfrangu/async_event_emitter": "2.2.2"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "quoteProps": "preserve",
        "semi": true
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "node": true,
            "es6": true
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": "latest"
        },
        "rules": {
            "arrow-spacing": [
                "warn",
                {
                    "before": true,
                    "after": true
                }
            ],
            "brace-style": [
                "error",
                "1tbs",
                {
                    "allowSingleLine": true
                }
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "comma-spacing": "error",
            "comma-style": "error",
            "curly": [
                "error",
                "multi-line",
                "consistent"
            ],
            "dot-location": [
                "error",
                "property"
            ],
            "handle-callback-err": "off",
            "indent": [
                "error",
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "keyword-spacing": "error",
            "max-nested-callbacks": "off",
            "max-statements-per-line": "off",
            "no-console": "off",
            "no-empty-function": "error",
            "no-floating-decimal": "error",
            "no-inline-comments": "off",
            "no-lonely-if": "error",
            "no-multi-spaces": "error",
            "no-trailing-spaces": [
                "error"
            ],
            "no-var": "error",
            "no-unused-vars": "warn",
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "prefer-const": "warn",
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "space-before-blocks": "error",
            "space-before-function-paren": [
                "error",
                {
                    "anonymous": "always",
                    "named": "never",
                    "asyncArrow": "always"
                }
            ],
            "space-in-parens": "error",
            "space-infix-ops": "error",
            "space-unary-ops": "error",
            "spaced-comment": "error",
            "yoda": "error",
            "require-yield": "off"
        }
    }
}
